page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  flex: none;
  display: flex;
  background: #323534;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  color: #ffffff;
  font-size: 36rpx;
}
.navbar .item.active{
  font-size: 38rpx;
  color: #ffffff;
  font-weight: bold;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
}

.setting {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 180px;
}

.btn {
  position: relative;
  width: 240px;
  height: 160px;
}

.light {
  width: 150rpx;
  height: 75rpx;
  font-size: 9pt;
  text-align: center;
  position: absolute;
  bottom: 5%;
  left: 5%;
  margin: auto;
  border-radius: 15%;
  border-color: #ffffff;
  background: #F2f2f2;
  -webkit-text-fill-color: #ffffff;
  -webkit-text-stroke-color: #ffffff;
  -moz-text-decoration-color: #ffffff;
}

.dark {
  width: 150rpx;
  height: 75rpx;
  font-size: 9pt;
  text-align: center;
  position: absolute;
  bottom: 5%;
  left: 5%;
  margin: auto;
  border-radius: 15%;
  border-color: #323534;
  background: #F2f2f2;
  -webkit-text-fill-color: #323534;
  -webkit-text-stroke-color: #323534;
  -moz-text-decoration-color: #323534;
}

.control {
  position: relative;
  padding: 12rpx 0rpx;
  padding-left: 16rpx;
  text-align: left;
  background-color: #F2f2f2;
  color: #5a5a5a;
  font-size: 12pt;
}

.item_size {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: auto;
    width: 200rpx;
}

.img {
    width: 120rpx;
    height: 120rpx;
    margin-top: 30rpx;
}

.text {
    font-size: 10pt;
    margin-top: 5rpx;
    margin-bottom: 15rpx;
    color: #000000;
}

.information {
  position: relative;
  padding: 12rpx 0rpx;
  padding-left: 16rpx;
  text-align: left;
  background-color: #F2f2f2;
  color: #5a5a5a;
  font-size: 12pt;
}

.info_1 {
  position: relative;
  display: flex;
  padding: 10px;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  background-color: #ffffff;
  border-bottom: 1px solid #dadada;
}
.image {
  display: inline-block;
  width: 40px;
  margin-right: 15px;
}
.image image {
  width: 100%;
  height: 40px;
  vertical-align: -2px;
}
.text12 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: left;
  position: relative;
  margin-left: 20rpx;
}

.text_1 {
    position: relative;
    font-size: 10pt;
    color: #000000;
}
.text_2 {
    position: relative;
    font-size: 9pt;
    color: #5a5a5a;
}


.eq_info_1 {
  width: 100%;
  position: relative;
  display: flex;
  padding: 3rpx;
  align-items: center;
  background-color: #ffffff;
  border-bottom: 1px solid #dadada;
}
.eq_image {
  display: inline-block;
  width: 150rpx;
  margin-right: 10px;
}
.eq_image image {
  width: 100%;
  height: 150rpx;
}
.eq_text12 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: left;
  position: relative;
  margin-left: 20rpx;
}

.eq_text_1 {
  position: relative;
  font-size: 33rpx;
  color: #000000;
}
.eq_text_2 {
  position: relative;
  font-size: 30rpx;
  color: #5a5a5a;
}
.go {
  position: absolute;
  right: 30rpx;
  font-size: 50rpx;
  color: gray;
}

.add_eq {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 70rpx;
}
.add_eq::after{
  border: none;
}

.note {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 30rpx;
  font-size: 25rpx;
  text-align: center;
  color:  #5a5a5a;
}