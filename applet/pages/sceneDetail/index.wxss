/**index.wxss**/
page {
  background-color: #f4f4f4;
}

.container {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #f4f4f4;
  color: #939393;
}

.scene_image {
  width: 100%;
  height: 200px;
}

.menu {
  width: 100%;
  height: auto;
  background-color: #ffffff;
  margin-top: 2px;
  margin-bottom: 2px;
  padding: 5px;
  font-size: 12pt;
  color: #5a5a5a;
}

.row {
    display: flex;
    flex-direction: row;
    flex: 1;
    justify-content: space-around;
    flex-wrap: wrap;
}

.item_size {
  /*
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    */
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: auto;
    width: 350rpx;
    border: 2px solid #ffffff;
    border-radius: 0px;
    background-color: #ffffff;
    margin-left: 1px;
    margin-right: 1px;
    margin-top: 2px;
    margin-bottom: 2px;
}

.img {
    position: relative;
    width: 150rpx;
    height: 150rpx;
    top: 0rpx;
    bottom: 0rpx;
}

.right {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
    margin-right: 20rpx;
}

.text_1 {
    position: relative;
    font-size: 10pt;
    color: #5a5a5a;
}

.state {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-top: 5rpx;
}

.icon {
    position: relative;
    width: 40rpx;
    height: 40rpx;
    margin-right: 2rpx;
}

.text_2 {
    position: relative;
    font-size: 9pt;
    color: #5a5a5a;
}

.addEq {
  width: 100%;
  height: auto;
  margin-top: 10rpx;
  background-color: #ffffff;
  font-size: 12pt;
  color: #5a5a5a;
}